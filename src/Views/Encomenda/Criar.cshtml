@model ProjetoLinhaMontagem.Models.Encomenda

<h2>Criar Encomenda</h2>

<form asp-action="Criar" method="post">
    <div>
        <label for="Numero">NÃºmero</label>
        <input type="number" asp-for="Numero" required />
    </div>
    <div>
        <label for="Cliente">Cliente</label>
        <select asp-for="IdUtilizador" asp-items="@(new SelectList(ViewBag.Clientes, "Id", "Nome"))"></select>
    </div>
    <div>
        <h3>Produtos</h3>
        @for (int i = 0; i < ViewBag.Produtos.Count; i++)
        {
            <div>
                <label>@ViewBag.Produtos[i].Nome</label>
                <input type="hidden" name="produtos" value="@ViewBag.Produtos[i].Id" />
                <input type="number" name="quantidades" min="0" placeholder="Quantidade" />
            </div>
        }
    </div>
    <div>
        <input type="submit" value="Criar" />
    </div>
</form>